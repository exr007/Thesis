@article{santander_observation_2013,
	title = {Observation of {Cosmic}-{Ray} {Anisotropy} at {TeV} and {PeV} {Energies} in the {Southern} {Sky}},
	url = {http://inspirehep.net/record/1424402/files/thesis.pdf},
	abstract = {Cosmic rays in the TeV to PeV energy range are believed to originate in our galaxy, possibly in local astrophysical accelerators such as supernova remnants. After escaping from their sources, cosmic rays propagate through the interstellar medium where they scatteroff turbulences in the Galactic magnetic field. This scattering process efficiently isotropizes the trajectories of cosmic rays before their arrival at Earth. However, it is predicted that a dipolar anisotropy with per-mille amplitude or lower should subsist in their arrival directions.
